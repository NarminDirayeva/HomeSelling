@* Smart Search *@
<div class="panel panel-default sidebar-menu wow fadeInRight animated" style="margin-bottom: 30px;">
    <div class="panel-heading">
        <h3 class="panel-title">Smart Search</h3>
    </div>
    <div class="panel-body search-widget" style="padding: 20px;">
        <form asp-controller="Properties" asp-action="Index" method="get" class="form-inline">
            <fieldset>
                <div class="row">
                    <div class="col-xs-12 mb-3">
                        <input type="text" class="form-control" placeholder="Key word" name="Keyword" value="@ViewBag.Keyword" style="width: 100%; padding: 12px;">
                    </div>
                </div>
            </fieldset>

            <fieldset>
                <div class="row">
                    <div class="col-xs-6 mb-3">
                        <select id="city" class="selectpicker" name="City" data-live-search="true" title="Select Your City" style="width: 100%; padding: 12px;">
                            @foreach (var city in ViewBag.Cities as List<string>)
                            {
                                <option value="@city">@city</option>
                            }
                        </select>
                    </div>
                    <div class="col-xs-6 mb-3">
                        <select id="status" class="selectpicker show-tick form-control" name="Status" style="width: 100%; padding: 12px;">
                            @foreach (var status in ViewBag.Statuses as List<string>)
                            {
                                <option value="@status">@status</option>
                            }
                        </select>
                    </div>
                </div>
            </fieldset>

            @* Features seçimi *@
            <fieldset class="padding-5">
                <div class="row">
                    @foreach (var feature in ViewBag.Features as List<Feature>)
                    {
                        <div class="col-xs-6 mb-2">
                            <div class="checkbox">
                                <label>
                                    <input type="checkbox" name="SelectedFeatures" value="@feature.ID">
                                    @feature.Name
                                </label>
                            </div>
                        </div>
                    }
                </div>
            </fieldset>

            <fieldset>
                <div class="row">
                    <div class="col-xs-12">
                        <button type="submit" class="button btn largesearch-btn" style="width: 100%; padding: 15px; text-align: center;">
                            Search
                        </button>
                    </div>
                </div>
            </fieldset>
        </form>
    </div>
</div>
