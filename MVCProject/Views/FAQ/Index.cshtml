@model List<MVCProject.Models.FAQ>
<!-- End of nav bar -->

<div class="page-head">
    <div class="container">
        <div class="row">
            <div class="page-head-content">
                <h1 class="page-title">FAQ PAge</h1>
            </div>
        </div>
    </div>
</div>
<!-- End page header -->
<div class="content-area recent-property" style="background-color: #FCFCFC; padding-bottom: 55px;">
    <div class="container">
        <div class="row">
            <div class="col-md-10 col-md-offset-1 col-sm-12 text-center page-title">
                <h2>Frequently Asked Questions</h2>
                <br />
            </div>
        </div>

        <div class="row row-feat">
            <div class="col-md-12">
                @{
                    int count = 0;
                    var leftColumn = Model.Take(Model.Count / 2 + Model.Count % 2).ToList();
                    var rightColumn = Model.Skip(leftColumn.Count).ToList();
                }

                <div class="col-sm-6 feat-list">
                    @foreach (FAQ faq in leftColumn)
                    {
                        string collapseId = "faqLeft" + count;
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title fqa-title" data-toggle="collapse" data-target="#@collapseId">
                                        @faq.Question
                                    </h4>
                                </div>
                                <div id="@collapseId" class="panel-collapse collapse fqa-body">
                                    <div class="panel-body">
                                        <p>@faq.Answer</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        count++;
                    }
                </div>

                <div class="col-sm-6 feat-list">
                    @foreach (FAQ faq in rightColumn)
                    {
                        string collapseId = "faqRight" + count;
                        <div class="panel-group">
                            <div class="panel panel-default">
                                <div class="panel-heading">
                                    <h4 class="panel-title fqa-title" data-toggle="collapse" data-target="#@collapseId">
                                        @faq.Question
                                    </h4>
                                </div>
                                <div id="@collapseId" class="panel-collapse collapse fqa-body">
                                    <div class="panel-body">
                                        <p>@faq.Answer</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                        count++;
                    }
                </div>
            </div>
        </div>
    </div>
</div>
